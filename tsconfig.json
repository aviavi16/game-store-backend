{
    "compilerOptions": {
      "target": "ES2020",
      "typeRoots": ["./node_modules/@types", "./types"],
      "module": "CommonJS",
      "rootDir": "./",
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  